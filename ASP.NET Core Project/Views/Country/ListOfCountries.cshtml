@model IEnumerable<CountryModel>

@{
    ViewData["Title"] = "ListOfCountries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ListOfCountries</h1>

<table class="table">
    <thead>
        <tr><th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cities)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cities)
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-controller="PeopleEF" asp-action="ListOfPeopleEF">Back to List</a>
</div>
