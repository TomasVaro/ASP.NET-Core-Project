@model PersonLanguageModel
@{
    ViewData["Title"] = "AddLanguage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Language to Person</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddLanguage">
            <div class="form-group">
                <label class="control-label">Person:</label>
                <select asp-for="PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Language:</label>
                <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.LanguageId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
        </tr>
    </thead>
    <tbody>
        </tbody>
    </table>
<div>
    <a asp-controller="PeopleEF" asp-action="ListOfPeopleEF">Back to List</a>
</div>