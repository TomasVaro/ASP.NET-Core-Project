@{
    ViewData["Title"] = "FeverCheck";
}

<h2>Fever check</h2>
<form asp-controller="Doctor" asp-action="FeverCheck" method="post">
    <label>Enter your body-temperature:</label>
    <input type="number" step="0.1" min="25" max="42.5" name="temperature" autofocus/>
    <input type="submit" value="Check"/>
    <br>
</form>
<p>@ViewBag.Message</p>