@model PersonLanguageModel
@{
    ViewData["Title"] = "AddDeleteLanguagePerson";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add/Delete Language to/from Person</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddDeleteLanguagePerson">
            <div class="form-group">
                <label class="control-label">Person:</label>
                <select asp-for="PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Language:</label>
                <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.LanguageId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add/Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-controller="PeopleEF" asp-action="ListOfPeopleEF">Back to People List</a>
</div>