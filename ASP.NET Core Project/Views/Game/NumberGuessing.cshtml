@{
    ViewData["Title"] = "NumberGuessing";
}

<h2>Guess a number</h2>
<form asp-controller="Game" asp-action="NumberGuessing" method="post">
    <label>Guess a number between 1 and 100:</label>
    <input type="number" min="1" max="100" name="guessedNr" autofocus />
    <input type="submit" value="Check" />
    <br>
</form>
<p>Number of guesses: @ViewBag.Counter</p>
<p>@ViewBag.Message</p>
