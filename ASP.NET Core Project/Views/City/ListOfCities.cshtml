@model IEnumerable<CityModel>

@{
    ViewData["Title"] = "List of Cities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List of Cities</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            @if (User.IsInRole("Admin"))
            {
                <th>Action</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.Country)
            </td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    <a href="#" onclick="location.href = '@Url.Action("DeleteCity", "City", new { id=item.CityId })'">Delete</a>
                    <a href="#" onclick="location.href = '@Url.Action("EditCity", "City", new { id=item.CityId })'">Edit</a>
                </td>
            }
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-controller="PeopleEF" asp-action="ListOfPeopleEF">Back to People List</a>
</div>
